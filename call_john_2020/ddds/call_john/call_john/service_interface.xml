<?xml version="1.0" encoding="utf-8"?>
<service_interface>

    <action name="MakeCall">
        <parameters>
            <parameter predicate="person_to_call" format="value"/>
            <parameter predicate="number_type_to_call" format="value"/>
        </parameters>
        <failure_reasons/>
        <target>
            <http endpoint="http://http-service/make_call"/>
        </target>
    </action>

    <entity_recognizer name="BasicActionRecognizer">
        <target>
            <http endpoint="http://http-service/contact_recognizer"/>
        </target>
    </entity_recognizer> 

    <query name="number_of_contact">
        <parameters>
            <parameter predicate="person_to_call" format="value"/>
            <parameter predicate="number_type_to_call" format="value"/>
        </parameters>
        <target>
            <http endpoint="http://http-service/number_of_contact"/>
        </target>
    </query>

</service_interface>
